{
  "name": "2mqjs",
  "description": "Архитектурная микробиблиотека для веб-приложений без фреймворков: компоненты, шина событий, воркеры, задачи, стор.",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "default": "./dist/main.js"
    },
    "./ports": {
      "import": "./dist/ports.js",
      "default": "./dist/ports.js"
    },
    "./events": {
      "import": "./dist/events.js",
      "default": "./dist/events.js"
    },
    "./workers": {
      "import": "./dist/workers.js",
      "default": "./dist/workers.js"
    },
    "./components": {
      "import": "./dist/components.js",
      "default": "./dist/components.js"
    },
    "./tasks": {
      "import": "./dist/tasks.js",
      "default": "./dist/tasks.js"
    },
    "./store": {
      "import": "./dist/store.js",
      "default": "./dist/store.js"
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/*.d.ts"
      ],
      "ports": [
        "dist/ports.d.ts"
      ],
      "events": [
        "dist/events.d.ts"
      ],
      "workers": [
        "dist/workers.d.ts"
      ],
      "components": [
        "dist/components.d.ts"
      ],
      "tasks": [
        "dist/tasks.d.ts"
      ],
      "store": [
        "dist/store.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc",
    "release": "node scripts/release.js",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poliklot/2mqjs.git"
  },
  "bugs": {
    "url": "https://github.com/poliklot/2mqjs/issues"
  },
  "homepage": "https://github.com/poliklot/2mqjs#readme",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "chalk": "^5.5.0",
    "inquirer": "^12.9.2",
    "ora": "^8.2.0",
    "typescript": "^5.8.3"
  }
}
